<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.ConfigurationsActivity">
    <data>
        <variable name="cfg"     type="spider65.ebike.tsdz2_esp32.data.TSDZ_Configurations"/>
        <variable name="handler" type="spider65.ebike.tsdz2_esp32.activities.ConfigurationsActivity"/>
    </data>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_weight="0"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/buttonLayout">

            <LinearLayout
                android:id="@+id/mainLinearLayout"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="@string/wheel" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:text="@string/wheel_perimeter" />

                    <EditText
                        android:id="@+id/wheelPerimeterET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:ems="2"
                        android:gravity="end"
                        android:inputType="number"
                        android:textSize="16sp"
                        android:text="@{String.valueOf(cfg.ui16_wheel_perimeter)}"
                        tools:text="1234" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:text="@string/wheel_speed" />

                    <EditText
                        android:id="@+id/maxSpeedET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        tools:text="99"
                        android:textSize="16sp"
                        android:ems="2"
                        android:text="@{String.valueOf(cfg.ui8_wheel_max_speed)}"
                        android:inputType="number" />
                </LinearLayout>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="30dp"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:text="@string/battery" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="16sp"
                            android:text="@string/max_current" />

                        <EditText
                            android:id="@+id/maxCurrentET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:layout_marginEnd="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5dp"
                            android:ems="2"
                            android:inputType="number"
                            android:textSize="16sp"
                            android:text="@{String.valueOf(cfg.f_wh_100_percent)}"
                            tools:text="16" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="16sp"
                            android:text="@string/lvc_voltage" />

                        <EditText
                            android:id="@+id/LVCVoltageET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:layout_marginEnd="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5dp"
                            tools:text="42.0"
                            android:ems="2"
                            android:textSize="16sp"
                            android:text="@{String.valueOf(cfg.f_battery_voltage_reset_wh_counter)}"
                            android:inputType="numberDecimal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="16sp"
                            android:text="@string/resistance" />

                        <EditText
                            android:id="@+id/resistanceET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:layout_marginEnd="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5dp"
                            android:ems="2"
                            android:textSize="16sp"
                            android:inputType="numberDecimal"
                            android:text="@{String.valueOf(cfg.f_wh)}"
                            tools:text="290" />
                    </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="@string/battery_soc" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="16sp"
                            android:text="@string/total_wh" />

                        <EditText
                            android:id="@+id/totalWhET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:layout_marginEnd="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5dp"
                            android:ems="2"
                            android:inputType="numberDecimal"
                            android:textSize="16sp"
                            android:text="@{String.valueOf(cfg.f_wh_100_percent)}"
                            tools:text="100" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="16sp"
                            android:text="@string/reset_voltage" />

                        <EditText
                            android:id="@+id/resetVoltageET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:layout_marginEnd="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5dp"
                            tools:text="54.0"
                            android:ems="2"
                            android:textSize="16sp"
                            android:text="@{String.valueOf(cfg.f_battery_voltage_reset_wh_counter)}"
                            android:inputType="numberDecimal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="16sp"
                            android:text="@string/used_wh" />

                        <EditText
                            android:id="@+id/batterySocUsedWhET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:layout_marginEnd="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5dp"
                            android:ems="2"
                            android:textSize="16sp"
                            android:inputType="numberDecimal"
                            android:text="@{String.valueOf(cfg.f_wh)}"
                            tools:text="90.5" />
                    </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="@string/motor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:text="@string/motor_voltage" />

                    <Spinner
                        android:id="@+id/motorVoltageSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/motor_voltage"
                        android:background="@android:drawable/btn_dropdown"
                        android:gravity="end"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:ems="2"
                        android:textSize="16sp"
                        android:spinnerMode="dropdown"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:text="@string/motor_max_current" />

                    <EditText
                        android:id="@+id/motorMaxCurrentET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:ems="2"
                        android:inputType="number"
                        android:textSize="16sp"
                        android:text="@{String.valueOf(cfg.f_wh_100_percent)}"
                        tools:text="16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:text="@string/current_ramp" />

                    <EditText
                        android:id="@+id/motorCurrentRampET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:ems="2"
                        android:inputType="number"
                        android:textSize="16sp"
                        android:text="@{String.valueOf(cfg.f_wh_100_percent)}"
                        tools:text="10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:text="@string/motor_current_control" />

                    <Spinner
                        android:id="@+id/motorCurrentControlSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/motor_current_control"
                        android:background="@android:drawable/btn_dropdown"
                        android:gravity="end"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:ems="2"
                        android:textSize="16sp"
                        android:spinnerMode="dropdown"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:text="@string/motor_min_current_adc_steps" />

                    <EditText
                        android:id="@+id/motorMinCurrentADCStepsET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:ems="2"
                        android:inputType="number"
                        android:textSize="16sp"
                        android:text="@{String.valueOf(cfg.f_wh_100_percent)}"
                        tools:text="4" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:text="@string/motor_field_weakening" />

                    <Spinner
                        android:id="@+id/motorFieldWeakeningSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/enable_disable"
                        android:background="@android:drawable/btn_dropdown"
                        android:gravity="end"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:ems="2"
                        android:textSize="16sp"
                        android:spinnerMode="dropdown"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scrollView">

            <Button
                android:id="@+id/okButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="@{handler::onOkCancelClick}"
                android:text="@string/ok" />

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="@{handler::onOkCancelClick}"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/cancel" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>

