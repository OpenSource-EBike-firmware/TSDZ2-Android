<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.FragmentStatus">
    <data>
        <variable name="status" type="spider65.ebike.tsdz2_esp32.data.TSDZ_Periodic"/>
        <variable name="handler" type="spider65.ebike.tsdz2_esp32.fragments.FragmentStatus"/>
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:longClickable="false">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vert1GL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertHalfGL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vert2GL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horiz1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horiz11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horiz2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.325" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horiz3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horiz4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.775" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horiz5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1" />

    <FrameLayout
        android:id="@+id/flBattery"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/horiz11">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/batterySOCTV"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="32sp"
                android:gravity="start"
                android:layout_marginStart="24dp"
                android:layout_gravity="center_vertical"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                tools:text="1234" />

            <TextClock
                android:id="@+id/textClock"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:format12Hour="hh:mm:ss a"
                android:textSize="32sp"
                android:gravity="end"
                android:layout_marginEnd="30dp"
                android:layout_gravity="center_vertical"
                android:textAppearance="@android:style/TextAppearance.Material.Large"/>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fl1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toTopOf="@+id/horiz3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horiz2">
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fl21"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/vert1GL"
        app:layout_constraintBottom_toTopOf="@+id/horiz2"
        app:layout_constraintTop_toTopOf="@+id/horiz11">
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fl22"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toTopOf="@+id/horiz2"
        app:layout_constraintEnd_toEndOf="@id/vert2GL"
        app:layout_constraintStart_toEndOf="@+id/vert1GL"
        app:layout_constraintTop_toTopOf="@+id/horiz11">
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fl23"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toTopOf="@+id/horiz2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vert2GL"
        app:layout_constraintTop_toTopOf="@+id/horiz11">
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fl31"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/vertHalfGL"
        app:layout_constraintBottom_toTopOf="@+id/horiz4"
        app:layout_constraintTop_toTopOf="@+id/horiz3"
        android:longClickable="true">
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fl32"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toTopOf="@+id/horiz4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vertHalfGL"
        app:layout_constraintTop_toTopOf="@+id/horiz3"
        android:longClickable="true">
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fl41"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/vertHalfGL"
        app:layout_constraintBottom_toTopOf="@+id/horiz5"
        app:layout_constraintTop_toTopOf="@+id/horiz4"
        android:longClickable="true">
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fl42"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toTopOf="@+id/horiz5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vertHalfGL"
        app:layout_constraintTop_toTopOf="@+id/horiz4"
        android:longClickable="true">
    </FrameLayout>

    <ImageButton
        android:id="@+id/assistLevelMinusBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:rotation="90"
        android:src="@android:drawable/arrow_down_float"
        app:layout_constraintBottom_toTopOf="@id/horiz2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/vert1GL"
        app:layout_constraintTop_toBottomOf="@+id/horiz11"
        />

    <ImageButton
        android:id="@+id/assistLevelPlusBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:padding="20dp"
        android:rotation="-90"
        android:src="@android:drawable/arrow_down_float"
        app:layout_constraintTop_toBottomOf="@+id/horiz11"
        app:layout_constraintBottom_toTopOf="@id/horiz2"
        app:layout_constraintStart_toStartOf="@+id/vert2GL"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/fl1TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintBottom_toTopOf="@+id/fl1ValueTV"
        app:layout_constraintEnd_toStartOf="@+id/vertHalfGL"
        app:layout_constraintStart_toStartOf="@+id/vertHalfGL"
        app:layout_constraintTop_toTopOf="@+id/horiz2" />

    <TextView
        android:id="@+id/fl1ValueTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="46sp"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintBottom_toTopOf="@+id/horiz3"
        app:layout_constraintEnd_toStartOf="@+id/vertHalfGL"
        app:layout_constraintStart_toStartOf="@+id/vertHalfGL"
        app:layout_constraintTop_toBottomOf="@+id/horiz2"
        app:layout_constraintVertical_bias="0.6"
        tools:text="25.2" />

    <TextView
        android:id="@+id/fl41TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintTop_toTopOf="@+id/horiz4"
        app:layout_constraintBottom_toTopOf="@+id/fl41ValueTV"
        app:layout_constraintEnd_toStartOf="@+id/vert1GL"
        app:layout_constraintStart_toStartOf="@+id/vert1GL" />

    <TextView
        android:id="@+id/fl41ValueTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="46sp"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintBottom_toTopOf="@+id/horiz5"
        app:layout_constraintEnd_toStartOf="@+id/vert1GL"
        app:layout_constraintStart_toStartOf="@+id/vert1GL"
        app:layout_constraintTop_toTopOf="@+id/horiz4"
        app:layout_constraintVertical_bias="0.6"
        tools:text="20"/>

    <TextView
        android:id="@+id/fl32TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintTop_toTopOf="@+id/horiz3"
        app:layout_constraintBottom_toTopOf="@+id/fl32ValueTV"
        app:layout_constraintEnd_toStartOf="@+id/vert2GL"
        app:layout_constraintStart_toStartOf="@+id/vert2GL" />

    <TextView
        android:id="@+id/fl32ValueTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="46sp"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintBottom_toTopOf="@+id/horiz4"
        app:layout_constraintEnd_toStartOf="@+id/vert2GL"
        app:layout_constraintStart_toStartOf="@+id/vert2GL"
        app:layout_constraintTop_toTopOf="@+id/horiz3"
        app:layout_constraintVertical_bias="0.6"
        tools:text="425"/>

    <TextView
        android:id="@+id/fl31TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintTop_toTopOf="@+id/horiz3"
        app:layout_constraintBottom_toTopOf="@+id/fl31ValueTV"
        app:layout_constraintEnd_toStartOf="@+id/vert1GL"
        app:layout_constraintStart_toStartOf="@+id/vert1GL" />

    <TextView
        android:id="@+id/fl31ValueTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="46sp"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintBottom_toTopOf="@+id/horiz4"
        app:layout_constraintEnd_toStartOf="@+id/vert1GL"
        app:layout_constraintStart_toStartOf="@+id/vert1GL"
        app:layout_constraintTop_toTopOf="@+id/horiz3"
        app:layout_constraintVertical_bias="0.6"
        tools:text="200"/>

    <TextView
        android:id="@+id/fl42TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintTop_toTopOf="@+id/horiz4"
        app:layout_constraintBottom_toTopOf="@+id/fl42ValueTV"
        app:layout_constraintEnd_toStartOf="@+id/vert2GL"
        app:layout_constraintStart_toStartOf="@+id/vert2GL" />

    <TextView
        android:id="@+id/fl42ValueTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="46sp"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintBottom_toTopOf="@+id/horiz5"
        app:layout_constraintEnd_toStartOf="@+id/vert2GL"
        app:layout_constraintStart_toStartOf="@+id/vert2GL"
        app:layout_constraintTop_toTopOf="@+id/horiz4"
        app:layout_constraintVertical_bias="0.6"
        tools:text="2.1"/>

    <TextView
        android:id="@+id/assistLevelTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintTop_toTopOf="@+id/horiz11"
        app:layout_constraintBottom_toTopOf="@+id/assistLevelValueTV"
        app:layout_constraintEnd_toStartOf="@+id/vertHalfGL"
        app:layout_constraintStart_toStartOf="@+id/vertHalfGL" />

    <TextView
        android:id="@+id/assistLevelValueTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="46sp"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintBottom_toTopOf="@+id/horiz2"
        app:layout_constraintEnd_toStartOf="@+id/vertHalfGL"
        app:layout_constraintStart_toStartOf="@+id/vertHalfGL"
        app:layout_constraintTop_toTopOf="@+id/horiz11"
        app:layout_constraintVertical_bias="0.6"
        tools:text="4"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
